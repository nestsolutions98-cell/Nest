# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=production

# Database Configuration (for local development)
# For Railway, these will be automatically set by Railway's PostgreSQL service
DATABASE_URL=postgresql://username:password@localhost:5432/sport_courses

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here
# Or use a pre-hashed password (recommended for production)
# ADMIN_PASSWORD_HASH=pbkdf2:sha256:260000$...

# Port (Railway will set this automatically)
PORT=5000

# Green Invoice API configuration (optional â€“ enables real GI invoice creation)
# Get credentials from your GI account (API section)
GI_CLIENT_ID=
GI_CLIENT_SECRET=
# Common types: 400 = Invoice/Receipt, 320 = Tax Invoice
GI_DOC_TYPE=400
# Default API base for GI
GI_API_BASE=https://api.greeninvoice.co.il/api/v1
# Optional: ask GI to email the invoice to the client
GI_SEND_EMAIL=false
